//-列表页，将数据库的数据取出以列表形式呈现出来
extends ./layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 电影名字
            th 导演
            th 国家
            th 录入时间
            th 查看
            th 更新
            th 删除
        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
              td #{item.title}
              td #{item.doctor}
              td #{item.country}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank",href="/admin/vedio/#{item._id}") 查看
              td: a(target="_blank",href="/admin/update/#{item._id}") 修改
                
              td: button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
        a.btn.btn-primary(href="/admin/houtai") 录入页增加            
  script(src="/js/admin.js")


          